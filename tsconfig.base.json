{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mosaicledger/core": ["packages/core/src/index.ts"],
      "@mosaicledger/mosaic": ["packages/mosaic/src/index.ts"],
      "@mosaicledger/banking": ["packages/banking/src/index.ts"],
      "@mosaicledger/xrpl": ["packages/xrpl/src/index.ts"]
    }
  }
}
