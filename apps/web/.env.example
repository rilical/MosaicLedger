# Demo mode default: when 1, mosaic uses demo unless user selects Bank/Capital One in the Data source dropdown.
# Set to 0 to allow live data; user can still toggle Demo / Bank (Plaid) / Capital One (Nessie) / Auto on the mosaic.
NEXT_PUBLIC_DEMO_MODE=1

# Judge mode is a hard "no surprises" toggle for expo hall demos.
NEXT_PUBLIC_JUDGE_MODE=0

# Optional feature flags (safe defaults: off)
NEXT_PUBLIC_AI_ENABLED=0
NEXT_PUBLIC_XRPL_ENABLED=0
NEXT_PUBLIC_PLAID_ENABLED=0
NEXT_PUBLIC_NESSIE_ENABLED=0
NEXT_PUBLIC_DEBUG_TRACES=0

# Expo tools (demo-only convenience)
NEXT_PUBLIC_EXPO_RESET_ENABLED=0
EXPO_RESET_ENABLED=0

# Supabase (Auth + DB)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=
SUPABASE_SERVICE_ROLE_KEY=
# Production: set to your app URL (e.g. https://mosaic-ledger.vercel.app) for magic link redirects
NEXT_PUBLIC_SITE_URL=

# Bank API (Plaid) scaffold
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Plaid token encryption (required for real bank linking)
# Generate a 32-byte base64 key: `openssl rand -base64 32`
PLAID_TOKEN_ENCRYPTION_KEY=

# Capital One DevExchange / Nessie (mock bank API)
# Key is server-only. Base URL default matches hackathon docs, but can be overridden.
NESSIE_API_KEY=
# Official docs use https://api.reimaginebanking.com, but some hackathon keys route via api.nessieisreal.com.
NESSIE_BASE_URL=https://api.reimaginebanking.com
# Optional: if your Nessie key is GET-only, set these IDs manually (bootstrap will reuse them).
NESSIE_CUSTOMER_ID=
NESSIE_ACCOUNT_ID=

# XRPL (Ripple track) - optional testnet send
# WebSocket endpoint for XRPL Testnet:
XRPL_RPC_URL=wss://s.altnet.rippletest.net:51233
# Testnet seed stays server-side only. Do NOT set this in any NEXT_PUBLIC_* env.
XRPL_TESTNET_SEED=
# Optional: destination address for round-up payments. If empty, sends to self.
XRPL_DESTINATION=
