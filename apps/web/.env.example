# Demo mode forces sample/offline behavior in the UI and disables external calls.
NEXT_PUBLIC_DEMO_MODE=1

# Judge mode is a hard "no surprises" toggle for expo hall demos.
NEXT_PUBLIC_JUDGE_MODE=0

# Optional feature flags (safe defaults: off)
NEXT_PUBLIC_AI_ENABLED=0
NEXT_PUBLIC_XRPL_ENABLED=0
NEXT_PUBLIC_PLAID_ENABLED=0

# Expo tools (demo-only convenience)
NEXT_PUBLIC_EXPO_RESET_ENABLED=0
EXPO_RESET_ENABLED=0

# Supabase (Auth + DB)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Bank API (Plaid) scaffold
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Plaid token encryption (required for real bank linking)
# Generate a 32-byte base64 key: `openssl rand -base64 32`
PLAID_TOKEN_ENCRYPTION_KEY=
