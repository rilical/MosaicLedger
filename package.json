{
  "name": "mosaicledger",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@mosaicledger/banking": "file:packages/banking",
    "@mosaicledger/core": "file:packages/core",
    "@mosaicledger/mosaic": "file:packages/mosaic",
    "d3-hierarchy": "^3.1.2",
    "zod": "^4.3.6"
  },
  "scripts": {
    "postinstall": "sh scripts/postinstall.sh",
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -r --filter \"@mosaicledger/*\" --filter \"!@mosaicledger/web\" --filter \"!@mosaicledger/mobile\" build",
    "build:all": "pnpm -r build",
    "prestart": "pnpm build",
    "start": "node index.js",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -C apps/web test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "mcp:dev": "pnpm -C packages/mcp-server dev:http",
    "nessie:probe": "tsx scripts/nessie-probe.ts",
    "check-demo": "pnpm -r --filter @mosaicledger/core --filter @mosaicledger/banking --filter @mosaicledger/mosaic build && tsx scripts/check-demo.ts",
    "check-secrets": "tsx scripts/check-secrets.ts",
    "check:supabase-schema": "tsx scripts/check-supabase-schema.ts",
    "seed": "tsx scripts/seed-demo.ts",
    "game:build": "tsx scripts/game15k-build.ts",
    "game:size": "tsx scripts/game15k-size.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "prettier": "^3.3.3",
    "terser": "^5.43.1",
    "tsx": "^4.19.2",
    "typescript-eslint": "^8.22.0",
    "typescript": "^5.7.3"
  }
}
