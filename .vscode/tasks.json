{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Start development server",
      "type": "shell",
      "command": "pnpm dev",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Build: Build all packages",
      "type": "shell",
      "command": "pnpm build",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Install: Install dependencies",
      "type": "shell",
      "command": "pnpm install",
      "problemMatcher": []
    },
    {
      "label": "Lint: Run ESLint",
      "type": "shell",
      "command": "pnpm lint",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Format: Format code with Prettier",
      "type": "shell",
      "command": "pnpm format",
      "problemMatcher": []
    },
    {
      "label": "Test: Check demo data",
      "type": "shell",
      "command": "pnpm check-demo",
      "problemMatcher": []
    }
  ]
}
